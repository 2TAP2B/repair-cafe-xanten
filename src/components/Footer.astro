---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <div class="flex flex-col gap-2">
        <p class="font-semibold">
          &copy; {currentYear} Repair Café Xanten
        </p>
        <p class="text-sm">
          Karthaus 12, 46509 Xanten<br>
          <a href="mailto:repaircafe-xanten@domrath.de" class="hover:underline">repaircafe-xanten@domrath.de</a>
        </p>
      </div>
      <div class="flex flex-col gap-2 text-right">
        <p class="text-sm">
          Koordination: Marion Domrath<br>
          Tel: 02825-3070207 / 0163-9255389
        </p>
        <p class="text-xs opacity-75">
          Unentgeltliche Nachbarschaftshilfe
        </p>
      </div>
    </div>
    <!-- At the bottom of footer -->
<div class="text-center text-xs opacity-70 mt-4">
  <a href="/impressum">Impressum</a> · 
  <a href="/datenschutz">Datenschutzerklärung</a> · 
  <a href="/cookies">Cookies</a> · 
  <a href="/opensource">Open Source</a>
</div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
