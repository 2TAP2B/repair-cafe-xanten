---
import { Icon } from 'astro-icon/components'

/**
 * EventTopBar Component
 *
 * @description A top announcement bar displaying the next event information
 */
---

<div class="event-top-bar py-3 md:py-4 border-b shadow-lg bg-gradient-to-r from-repair-olive to-repair-olive/90">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-center gap-2 md:gap-4 text-sm md:text-base text-white">
      <div class="flex items-center bg-white/20 backdrop-blur-sm rounded-full p-2 md:p-2.5 shadow-lg">
        <Icon name="lucide:calendar" class="text-white w-4 h-4 md:w-5 md:h-5" />
      </div>
      
      <div class="flex items-center gap-1 md:gap-2 font-medium">
        <span class="text-xs md:text-sm hidden sm:inline font-semibold">Nächstes Repair Café:</span>
        <span class="text-xs md:text-sm sm:hidden font-semibold">Nächstes Café:</span>
        <span class="font-bold bg-repair-burgundy px-3 py-1 rounded-full text-sm md:text-base shadow-lg text-white">30.08.2025</span>
        <span class="text-xs md:text-sm hidden lg:inline opacity-90">11-14 Uhr</span>
        <span class="text-xs md:text-sm hidden md:inline lg:hidden opacity-90">11-14h</span>
        <span class="text-xs md:text-sm hidden md:inline opacity-90">Haus der Begegnung, Karthaus 12</span>
        <span class="text-xs md:hidden opacity-90">Karthaus 12</span>
      </div>
      
      <a href="#stats" class="flex items-center bg-white/20 hover:bg-repair-burgundy/80 backdrop-blur-sm rounded-full p-2 md:p-2.5 transition-all duration-300 hover:translate-x-0.5 hover:shadow-lg">
        <Icon name="lucide:arrow-right" class="text-white w-4 h-4 md:w-5 md:h-5" />
      </a>
    </div>
  </div>
</div>

<style>
  .event-top-bar {
    background: linear-gradient(
      to right,
      var(--color-primary-300),
      var(--color-secondary-300)
    );
    /* Keep white text in both light and dark modes */
    color: var(--color-neutral-100);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
    border-bottom-color: var(--color-neutral-200);
  }
  
  /* Enhanced background elements for better text contrast */
  .event-top-bar .bg-black\/20 {
    background-color: rgba(0, 0, 0, 0.3) !important;
    backdrop-filter: blur(2px);
    border: 1px solid rgba(48, 48, 48, 0.2);
  }
  
  .event-top-bar .bg-black\/20:hover {
    background-color: rgba(0, 0, 0, 0.4) !important;
  }
  
  [data-icon] {
    width: 0.75rem;
    height: 0.75rem;
    color: var(--color-neutral-100);
    /* Add subtle drop shadow to icons for better visibility */
    filter: drop-shadow(0 1px 1px rgba(0, 0, 0, 0.3));
  }
  
  @media (min-width: 768px) {
    [data-icon] {
      width: 1rem;
      height: 1rem;
    }
  }
</style>


