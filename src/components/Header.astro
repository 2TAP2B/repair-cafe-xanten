---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        Über uns
        <Icon name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/#about">Über uns</a>
        </li>
        <li class="submenu-item">
          <a href="/#services">Services</a>
        </li>
        <li class="submenu-item">
          <a href="/#team">Helfer</a>
        </li>
        <li class="submenu-item">
          <a href="/howto">So geht's</a>
        </li>
      </ul>
    </li>
    <li class="menu-item">
      <a href="/blog">Blog</a>
    </li>
    <li class="menu-item">
      <a href="/#contact">Kontakt</a>
    </li>
    <li class="menu-item">
      <a href="/downloads">Downloads</a>
    </li>

    <li class="menu-item type-icon animate-rotate">
      <a href="https://github.com/2TAP2B/repair-cafe-xanten">
        <Icon name="lucide:github" />
        <span class="sr-only">Go to the GitHub page</span>
      </a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: var(--background-color);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;

    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
