---
import '../styles/tailwind.css'
import '../assets/scss/index.scss'
import SiteMeta from '../components/SiteMeta.astro'
import EventTopBar from '../components/EventTopBar.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import BackToTop from '../components/BackToTop.astro'
import { ClientRouter } from 'astro:transitions'

const {
  title = 'Reparieren statt wegwerfen – gemeinsam, ehrenamtlich, nachhaltig.',
  description = 'Im Repair Café unterstützen dich ehrenamtliche Helfer:innen dabei, defekte Alltagsgeräte selbst zu reparieren – kostenlos, nachhaltig und in deiner Nachbarschaft. Jetzt mit Linux-Hilfe zum Support-Ende von Windows 10.',
  url = Astro.site,
  image = 'social-preview-image.jpg',
  author = 'Tobias Steltner',
} = Astro.props
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SiteMeta title={title} description={description.substring(0, 100)} url={url} image={image} author={author} />

    <!-- Enable Astro View Transitions for all browsers -->
    <ClientRouter />
  </head>
  <body>
    <EventTopBar />
    <Header />
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>
    <Footer />
    <BackToTop />
    <style lang="scss" is:global>
      // sticky footer on low content pages
      html,
      body {
        height: 100%;
        overflow-x: hidden; /* Prevent horizontal scrolling */
      }

      body {
        display: flex;
        flex-direction: column;
        overflow-x: hidden; /* Extra prevention of horizontal scroll */

        main {
          flex: 1 0 auto;
        }

        footer {
          flex-shrink: 0;
        }
      }

      // Ensure all containers stay within viewport
      * {
        box-sizing: border-box;
      }
      
      // Prevent any element from causing horizontal overflow
      .container {
        max-width: 100vw;
        overflow-x: hidden;
      }
      
      // Mobile-specific overflow prevention
      @media (max-width: 768px) {
        html, body {
          overflow-x: hidden !important;
          width: 100vw;
          position: relative;
        }
        
        // Ensure fixed elements don't cause overflow
        .fixed {
          max-width: calc(100vw - 2rem);
        }
      }

      pre {
        border: 2px solid var(--link-color);
        border-radius: 0.35rem;
        padding: 1rem;
      }
    </style>
  </body>
</html>
